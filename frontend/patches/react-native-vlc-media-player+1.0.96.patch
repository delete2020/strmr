+#pragma mark - Now Playing Info Center
+
+- (void)setNowPlayingInfo:(NSDictionary *)info
+{
+    _nowPlayingTitle = info[@"title"];
+    _nowPlayingSubtitle = info[@"subtitle"];
+    _nowPlayingArtist = info[@"artist"];
+
+    NSString *newImageUri = info[@"imageUri"];
+    if (![newImageUri isEqualToString:_nowPlayingImageUri]) {
+        _nowPlayingImageUri = newImageUri;
+        _cachedArtwork = nil;
+        [self loadArtworkFromUri:newImageUri];
+    }
+
+    [self updateNowPlayingCenter];
+}
+
+- (void)clearNowPlayingInfo
+{
+    _nowPlayingTitle = nil;
+    _nowPlayingSubtitle = nil;
+    _nowPlayingArtist = nil;
+    _nowPlayingImageUri = nil;
+    _cachedArtwork = nil;
+    [_artworkTask cancel];
+    _artworkTask = nil;
+
+    MPNowPlayingInfoCenter.defaultCenter.nowPlayingInfo = nil;
+}
+
+- (void)loadArtworkFromUri:(NSString *)uriString
+{
+    if (!uriString || uriString.length == 0) {
+        return;
+    }
+
+    NSURL *url = [NSURL URLWithString:uriString];
+    if (!url) {
+        return;
+    }
+
+    [_artworkTask cancel];
+
+    __weak typeof(self) weakSelf = self;
+    _artworkTask = [[NSURLSession sharedSession] dataTaskWithURL:url completionHandler:^(NSData *data, NSURLResponse *response, NSError *error) {
+        if (error || !data) {
+            return;
+        }
+
+        UIImage *image = [UIImage imageWithData:data];
+        if (!image) {
+            return;
+        }
+
+        MPMediaItemArtwork *artwork = [[MPMediaItemArtwork alloc] initWithBoundsSize:image.size requestHandler:^UIImage * _Nonnull(CGSize size) {
+            return image;
+        }];
+
+        dispatch_async(dispatch_get_main_queue(), ^{
+            __strong typeof(weakSelf) strongSelf = weakSelf;
+            if (strongSelf) {
+                strongSelf->_cachedArtwork = artwork;
+                [strongSelf updateNowPlayingCenter];
+            }
+        });
+    }];
+    [_artworkTask resume];
+}
+
+- (void)updateNowPlayingCenter
+{
+    if (!_player || !_nowPlayingTitle) {
+        return;
+    }
+
+    NSMutableDictionary *nowPlayingInfo = [NSMutableDictionary dictionary];
+
+    if (_nowPlayingTitle) {
+        nowPlayingInfo[MPMediaItemPropertyTitle] = _nowPlayingTitle;
+    }
+
+    if (_nowPlayingSubtitle) {
+        nowPlayingInfo[MPMediaItemPropertyAlbumTitle] = _nowPlayingSubtitle;
+    }
+
+    if (_nowPlayingArtist) {
+        nowPlayingInfo[MPMediaItemPropertyArtist] = _nowPlayingArtist;
+    }
+
+    if (_cachedArtwork) {
+        nowPlayingInfo[MPMediaItemPropertyArtwork] = _cachedArtwork;
+    }
+
+    // Duration in seconds (VLC returns milliseconds)
+    int durationMs = [_player.media.length intValue];
+    if (durationMs > 0) {
+        nowPlayingInfo[MPMediaItemPropertyPlaybackDuration] = @(durationMs / 1000.0);
+    }
+
+    // Current time in seconds
+    int currentTimeMs = [[_player time] intValue];
+    if (currentTimeMs >= 0) {
+        nowPlayingInfo[MPNowPlayingInfoPropertyElapsedPlaybackTime] = @(currentTimeMs / 1000.0);
+    }
+
+    // Playback rate
+    nowPlayingInfo[MPNowPlayingInfoPropertyPlaybackRate] = @(_paused ? 0.0 : 1.0);
+
+    // Media type (video)
+    nowPlayingInfo[MPNowPlayingInfoPropertyMediaType] = @(MPNowPlayingInfoMediaTypeVideo);
+
+    MPNowPlayingInfoCenter.defaultCenter.nowPlayingInfo = nowPlayingInfo;
+}
